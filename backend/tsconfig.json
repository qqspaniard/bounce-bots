{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../common/*"]
    }
  },
  "include": ["src/**/*", "../common/**/*.ts"],
  "exclude": ["node_modules"]
}
